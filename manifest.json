{
  "manifest_version": 2,
  "name": "Random Lizard",
  "version": "0.1",

  "description": "Adds a random chance for any click to instead play the \"lizard\" sound effect. Just to annoy yourself.",

  "icons": {
    "48": "icons/lizard-48.png"
  },

  "web_accessible_resources": [
	"media/lizard.mp3"
  ],

  "options_ui": {
    "page": "options.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lizard.js"]
    }
  ],

  "permissions": [
    "storage"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "@randomlizard"
    }
  }
}
